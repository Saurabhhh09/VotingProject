@model  ShowModels.HomePageModel
@{
    ViewBag.Title = "Home Page";
}
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<link href="~/Content/HomePage.css" rel="stylesheet" />
<main>
    <div class="row" id="main">
        @*@Html.ActionLink("Candidate List", "ListCandidate", "User", "", new { @class = "btn text-white rounded-pill px-4 fs-5" })*@

        <div class="col-lg-6 p-5 animate__animated animate__fadeInLeft">
            <div class="row ps-5">
                <div class="col-lg-12 mt-4 ">
                    <h1 style="color: rgb(11, 93, 102); font-weight:700; font-size:50px;">Campus Vote Project</h1>
                </div>
                <div class="col-lg-12 mt-3" id="paragraphDiv">
                    <p style="font-size:19px;">
                        works with universities, community colleges, faculty, students and election officials to reduce barriers to student voting.
                    </p>
                    <p style="font-size:19px;">
                        Our goal is to help campuses institutionalize reforms that empower students with the information they need to register and vote.
                    </p>
                </div>
            </div>
            <div class="row ps-5 mt-lg-4 d-flex align-content-center" id="buttonsDiv">
                @if (Request.Cookies["UserId"] == null)
                {
                    <div class="col-lg-6">

                        <div class="button">
                            @Html.ActionLink("Login for Vote", "Login", "Form", "", new { @class = "btn rounded-pill px-4 fs-5" })
                        </div>
                        <div class="mt-3" id="registrationButton">
                            @Html.ActionLink("Registration", "Registration", "Form", "", new { @class = "btn rounded-pill px-4 fs-5" })
                        </div>
                    </div>
                }
                else
                {
            <div class="col-lg-6">
                <div class="button">
                    @Html.ActionLink("Enrollment as Candidate", "CandidateForm", "Form", "", new { @class = "btn rounded-pill px-4 fs-5" })
                </div>
                <div class=" mt-3" id="registrationButton">
                    @Html.ActionLink("Vote Here", "OngoingElections", "User", "", new { @class = "btn rounded-pill px-4 fs-5" })
                </div>               
            </div>
                }
            <div class="col-lg-6">
                <div class="button">
                    @Html.ActionLink("Candidate List", "OngoingElectionsForViewCandidates", "User", "", new { @class = "btn rounded-pill px-4 fs-5" })
                </div>
                <div class=" mt-3" id="registrationButton">
                    @Html.ActionLink("Result", "Result", "User", "", new { @class = "btn rounded-pill px-4 fs-5" })
                </div>
            </div>
            </div>
        </div>
        <div class="col-lg-6 col-sm-12 animate__animated animate__fadeInRight">
            <div class="container-fluid">
                <img src="~/Images/Home_Image.jpg" width="650" class="img-fluid rounded-4" />
            </div>
        </div>
    </div>

    <div class="mt-5" id="secondDiv">
        <div class="row py-5" id="info">
            <h4 class="text-center pt-5 fw-bold pb-3">UPCOMING ELECTIONS</h4>
            <div class="container-fluid">
                <div class="row">
                    @{
                        foreach (var item in Model.UpcomingElections)
                        {
                            <div class="col-lg-6 text-center">
                                <div class="" id="Date2"><p class="h5 text-white">@item.Title</p></div>
                                <div class="mt-4">
                                    <p class="fw-semibold">
                                        @*@item.Title
                                            <br />*@
                                        Polls open 6:00am - 9:00pm
                                    </p>
                                    <p class="fw-bold">
                                        Dates:
                                        <br />
                                        <span>@item.StartDate</span> - <span>@item.EndDate</span>
                                        <br />
                                        Hours vary by county
                                    </p>
                                    @*<p class="fw-bold">
                                            Candidates are:
                                            @foreach (var candidate in item.Candidates)
                                            {
                                                <br />
                                                <span>@candidate.Candidate</span> <span>-</span> <span>@candidate.Position</span>
                                            }
                                        </p>*@
                                </div>
                            </div>
                        }
                    }

                    @*<div class="col-lg-6 border-end text-center">
                            <div class="" id="Date1"><p class="h5 text-white">JUNE 24,2025</p></div>
                            <div class="mt-5">
                                <p class="fw-semibold">
                                    Primary Election
                                    <br />
                                    Polls open 6:00am - 9:00pm
                                </p>
                                <p class="fw-bold">
                                    Early Voting:
                                    <br />
                                    June 14th - June 22nd
                                    <br />
                                    Hours vary by county
                                </p>
                            </div>
                        </div>
                        <div class="col-lg-6 text-center">
                            <div class="" id="Date2"><p class="h5 text-white">NOVERMBER 4,2025</p></div>
                            <div class="mt-5">
                                <p class="fw-semibold">
                                    General Election
                                    <br />
                                    Polls open 6:00am - 9:00pm
                                </p>
                                <p class="fw-bold">
                                    Early Voting:
                                    <br />
                                    October 25th - November 2nd
                                    <br />
                                    Hours vary by county
                                </p>
                            </div>
                        </div>*@
                </div>
            </div>
            <div class="row mt-3" id="buttonDiv2">
                <div class="col-lg-12 d-flex justify-content-center" id="button">
                    @*<input type="button" class="btn rounded-0 px-4 py-3" value="ELECTION DEADLINE" />*@
                    @Html.ActionLink("ELECTION DEADLINE", "upComingElectionsDetail", "User", "", new { @class = "btn rounded-0 px-4 py-3" })
                </div>
            </div>

        </div>
    </div>
</main>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>