@model ShowModels.VotingPageModel
@{
    ViewBag.Title = "ViewCandidates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<div class="container my-5">
    <h6>@ViewBag.Message</h6>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.ElectionId)
        <p class="text-center fs-1 fw-normal mt-4"> <span class="rounded-1 px-2 py-2" style="background-color: rgb(11, 93, 102); color: #e3603a ">@Model.ElectionName</span> </p>
        <div class="row d-flex justify-content-center">
            @for (int i = 0; i < Model.Positions.Count; i++)
            {
                @Html.HiddenFor(m => m.Positions[i].PositionId)
                <div class="col-lg-3 d-flex justify-content-around card me-3">
                    <h3 class="text-center">@Model.Positions[i].PositionName</h3>
                    @for (int j = 0; j < Model.Positions[i].Candidates.Count; j++)
                    {
                        <div class="d-flex align-items-baseline">
                            @Html.RadioButtonFor(m => Model.Positions[i].SelectedCandidateId, Model.Positions[i].Candidates[j].CandidateId, new { @name = "SelectedCandidates[" + Model.Positions[i].PositionId + "]" })
                            <h6>@Model.Positions[i].Candidates[j].CandidateName</h6>
                        </div>
                    }
                </div>
            }
        </div>
        <h3 class="text-center my-4" style="color: rgb(11, 93, 102);">"Your Vote, Your Voice – Choose Wisely, Shape the Future!"</h3>
        <div class="row mt-4">
            <div class="col-lg-12 text-center">
                <input type="submit" value="Vote" class="btn rounded-0 border border-2 border-dark px-5 text-uppercase fw-bolder" style="background-color: rgb(11, 93, 102); color: #e3603a ;" />
            </div>
        </div>
    }
</div>

