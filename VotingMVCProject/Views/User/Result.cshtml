@model ShowModels.ViewResultToUserModel
@{
    ViewBag.Title = "Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<div class="container-fluid">
    <div class="card">
        <div class="card-header" style="background-color:#ff6a00;">
            <h1 class="text-center">@Model.electionName</h1>
        </div>
        <div class="card-body">
            @foreach (var positions in Model.Positions)
            {
                <div class="card my-2">
                    <div class="card-header text-white" style="background-color: rgb(11, 93, 102);">
                        <h3 class="text-center">@positions.PositionName</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <h4 class="text-center">Winner: @positions.Winners.CandidateName</h4>
                                <p class="text-center">Total Votes: @positions.Winners.TotalVotes</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    
  

</div>

