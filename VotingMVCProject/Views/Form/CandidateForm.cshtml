@model ShowModels.CandidateRegistrationModel
@{
    ViewBag.Title = "CandidateForm";
}

<div class="position-relative container-fluid p-0 vh-100 text-white">
    <div class=" d-flex align-items-center justify-content-centers text-white img-fluid w-100 h-100"
         style="background: url('../Images/About.jpg') no-repeat center center; background-size:cover">
        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    </div>
    <section class="position-absolute w-100 h-100 top-0 start-0  d-flex align-items-center justify-content-center">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="text-center">
                    Registration as a Candidate
                </h1>
                <hr />
            </div>
            <div class="row mt-4">
                <label class="fw-bold fs-4">@ViewBag.Message</label>
                <div class="col-lg-12 d-flex justify-content-center">
                    <div class="row">
                        <div class="col-lg-12  d-flex justify-content-center">
                            @using (Html.BeginForm())
                            {
                             
                                <div class="form-group my-4">
                                    @Html.LabelFor(model => model.ElectionId, "Election", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.ElectionId, Model.Elections, "Select Election", new { @class = "form-select" })
                                        @Html.ValidationMessageFor(model => model.ElectionId, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group my-4">
                                    @Html.LabelFor(model => model.PositionId, "Position", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.PositionId, Model.Positions, "Select Position", new { @class = "form-select" })
                                        @Html.ValidationMessageFor(model => model.PositionId, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group my-4">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Register" class="btn btn-primary" />
                                    </div>
                                </div>
                             }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

