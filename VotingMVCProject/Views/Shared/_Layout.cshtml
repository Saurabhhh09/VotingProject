<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://www.gstatic.com/charts/loader.js"></script>
    <link href="~/Content/LayOut.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg px-3">
            <div class="container-fluid">
                <div class="navbar-brand">
                    <a class="animate_animated animate__bounceOut" href="#">
                        <img src="~/Images/Logo.png" width="100" class="img-fluid" />
                    </a>
                </div>
                <div class="row">
                    <div class="col-lg-12 mb-2">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex justify-content-around">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="mailto:info@fairelectionscenter.org">Email : <span style="color:#e3603a">info@fairelectionscenter.org</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="tel:+12023310114">Contact : <span style="color:#e3603a">(202) 331-0114</span></a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-12">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar" style="background-color:#e3603a;">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="collapsibleNavbar">
                            <ul class="navbar-nav mx-auto" id="Navlinks">
                                <li class="nav-item fs-5 me-lg-5">
                                    @Html.ActionLink("Home", "Index", "Home", "", new { @class = "nav-link text-dark" })
                                </li>
                                <li class="nav-item fs-5 me-lg-5">
                                    @Html.ActionLink("About", "About", "Home", "", new { @class = "nav-link text-dark" })
                                </li>
                                <li class="nav-item fs-5 me-lg-5">
                                    @Html.ActionLink("Contact", "Contact", "Home", "", new { @class = "nav-link text-dark" })
                                </li>
                                @if (Request.Cookies["UserId"] != null)
                                {
                                    <li class="nav-item fs-5 me-lg-5">
                                        @Html.ActionLink("Vote", "OngoingElections", "User", "", new { @class = "nav-link text-dark" })
                                    </li>
                                }
                            </ul>
                            <div class="nav-item ms-auto fs-5" id="Navlinks">
                                <ul class="navbar-nav">
                                    @if (Request.Cookies["UserId"] != null)
                                    {
                                        <li class="nav-item me-lg-5">
                                            @Html.ActionLink("Profile", "ProfileUser", "User", "", new { @class = "nav-link text-dark" })
                                        </li>
                                        <li class="nav-item me-lg-5">
                                            @Html.ActionLink("Log Out", "Logout", "Form", "", new { @class = "nav-link text-dark" })
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item me-lg-5">
                                            @Html.ActionLink("Sign In", "Login", "Form", "", new { @class = "nav-link text-dark" })
                                        </li>
                                        <li class="nav-item me-lg-5">
                                            @Html.ActionLink("Registration", "Registration", "Form", "", new { @class = "nav-link text-dark" })
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
    </div>
    <div class="p-5 text-white bg-dark">
        <section>
            <div class="row px-3">
                <div class="col-lg-2">
                    <div class="row mb-3">
                        <div class="col-12">
                            <img src="~/Images/footer_logo.png" width="100" class="img-fluid" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-9">
                            <p>
                                Campus Vote Project is a project of Fair Elections Center.<a href="#" style="color: #e3603a;">Visit Site</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-10" id="footer">
                    <div class="row mb-4">
                        <div class="col-lg-4 px-lg-3">
                            <h4>Bussiness Communications:</h4><br />
                            <p class="px-lg-4">
                                Campus Vote Project | 1825 K St. NW  | Suite 701 | Washington, DC | 20006
                            </p>
                        </div>
                        <div class="col-lg-4 ps-lg-5">
                            <h4>Phone:</h4><br />
                            <p>(202) 331-0114</p>
                        </div>
                        <div class="col-lg-4">
                            <h4>Stayed Up to Date!</h4>
                            <p>
                                Sign up for our newsletter to
                                never miss an update.
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <h5>Donations (checks made out to 'Fair Elections Center'):</h5><br />
                            <p>Fair Elections Center | PO Box 66 | Marietta, OH | 45750</p>
                        </div>
                        <div class="col-lg-4 ps-lg-5">
                            <h4>Email:</h4>
                            <p>info@fairelectionscenter.org</p>
                        </div>
                        <div class="col-lg-4">
                            <div class="btn rounded-pill px-5 py-2" id="button"><h5 class="text-white">Subscribe Now</h5></div>
                        </div>
                    </div>
                </div>
            </div>
            <hr style="color:#e3603a;" />
            <div class="row px-3" id="footer2">
                <div class="col-lg-6">
                    <p>All rights reserved © Copyright 2025 by Campus Vote Project | Fair Elections Center</p>
                </div>
                <div class="col-lg-6">
                    <div class="icons d-flex">
                        <div class="icon me-2"><i class="ri-facebook-line"></i></div>
                        <div class="icon me-2"> <i class="ri-instagram-line"></i></div>
                        <div class="icon me-2"> <i class="ri-twitter-x-line"></i></div>
                        <div class="icon me-2"><i class="ri-tiktok-fill"></i></div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
