@model ShowModels.ReportsModel
@{
    ViewBag.Title = "ReportsTable";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var id = ViewBag.Id;
}


<div class="">
    <a href="@Url.Action("GeneratePdf", "Admin",new {electionId = id})" class="btn btn-success rounded-0">Download PDF</a>
</div>
<div class="container-fluid">
    <h2 class="text-center" style="color:#ff6a00">@Model.ElectionName</h2>
    <hr />
    @foreach (var positions in Model.ReportPositions)
    {
        <h3>@positions.PositionName</h3>
        <div class="row">
            @foreach (var candidates in positions.Candidates)
            {
                <h4>@candidates.CandidateName</h4>
                <div class="col-lg-3">
                    <table style="border:1px solid black;">
                        <thead style="border:1px solid black;">
                            <tr>
                                <td>Voter Name</td>
                                <td>Vote Date</td>
                            </tr>
                        </thead>
                        <tbody style="border:1px solid black;">
                            @foreach (var voters in candidates.Voters)
                            {
                                <tr style="border:1px solid black;">
                                    <td style="border:1px solid black;">@voters.VoterName</td>
                                    <td>@voters.Date</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <h3>@candidates.TotalVotes</h3>
            }
        </div>
    }
</div>
